﻿@Model List<Message>
@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


    <section class="content">

        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2>
                        Ürün Listesi
                        <small class="text-muted">Ürün İşlemleri Sayfası</small>
                    </h2>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <ul class="breadcrumb float-md-right">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Ürünler</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Ürün Listesi</a></li>
                        <li class="breadcrumb-item active">Ana Sayfa</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">

                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Gönderici</th>
                                        <th>Konu</th>
                                        <th>Durum</th>
                                        <th>Mesaj Tarihi</th>                                    
                                        <th>Mesajı Aç</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.MessageId</td>
                                            <td>@item.Customer.CustomerName @item.Customer.CustomerName </td>
                                            <td>@item.MessageSubject</td>
                                            <td>@item.SentimentLabel</td>
                                            <td>@item.CreatedDate.ToString("dd.MMM.yyyy")</td>
                                            <td>

                                            <button class="btn btn-warning btn-sm openMessageBtn" data-id="@item.MessageId">
                                                Mesajı Aç
                                                </button>
                                                </td>


                                            <td>
                                                <a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-danger btn-sm">Sil</a>
                                            </td>

                                            <td>
                                                <a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-success btn-sm">Güncelle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="mt-3 text-center">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">

                                        @if (ViewBag.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Message/MessageList?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                                            </li>
                                        }

                                        @{
                                            int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                            int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                                            if (startPage > 1)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="/Message/MessageList?page=1">1</a>
                                                </li>
                                                if (startPage > 2)
                                                {
                                                    <li class="page-item disabled">
                                                        <span class="page-link">...</span>
                                                    </li>
                                                }
                                            }

                                            for (int i = startPage; i <= endPage; i++)
                                            {
                                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                    <a class="page-link" href="/Message/MessageList?page=@i">@i</a>
                                                </li>
                                            }

                                            if (endPage < ViewBag.TotalPages)
                                            {
                                                if (endPage < ViewBag.TotalPages - 1)
                                                {
                                                    <li class="page-item disabled">
                                                        <span class="page-link">...</span>
                                                    </li>
                                                }
                                                <li class="page-item">
                                                    <a class="page-link" href="/Message/MessageList?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                                                </li>
                                            }
                                        }

                                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Message/MessageList?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                                            </li>
                                        }

                                    </ul>
                                </nav>
                            </div>

                            <div class="text-center mt-4">
                                <a href="/Message/CreateMessage/" class="btn btn-primary">Yeni Örnek Mesaj Girişi</a>
                            </div>

                            <div class="modal fade" id="messageModal" tabindex="-1" role="dialog">
                                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title">
                                                <i class="zmdi zmdi-email-open"></i> Mesaj Detayı
                                            </h5>
                                            <button type="button" class="close text-white" data-dismiss="modal">
                                                <span>&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <h5 id="msgSubject" class="font-weight-bold"></h5>
                                            <p class="text-muted mb-2">
                                                <i class="zmdi zmdi-account"></i> <span id="msgSender"></span> |
                                                <i class="zmdi zmdi-time"></i> <span id="msgDate"></span> |
                                                <i class="zmdi zmdi-info-outline"></i> <span id="msgSentiment"></span>
                                            </p>
                                            <hr>
                                            <p id="msgContent" style="font-size: 15px;"></p>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).on("click", ".openMessageBtn", function () {
            var id = $(this).data("id");

            $.ajax({
                url: "/Message/GetMessageDetail",
                data: { id: id },
                success: function (res) {
                    if (!res.success) return;

                    $("#msgSubject").text(res.subject);
                    $("#msgSender").text(res.sender);
                    $("#msgContent").text(res.content);
                    $("#msgDate").text(res.date);
                    $("#msgSentiment").text(res.sentiment);

                    $("#messageModal").modal("show");
                }
            });
        });
    </script>




